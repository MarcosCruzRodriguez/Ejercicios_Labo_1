#include "calculos_array.h"

int inicializacionArray(int array[], int size, int valor)
{
	int retorno = 0;

	if(array != NULL && size > 0)
	{
		for(int i = 0; i < size; i++)
		{
			array[i] = valor;
		}
		retorno = 1;
	}
	return retorno;
}

void pedirValores(int array[], int size)
{
	for(int i = 0; i < size; i++)
	{
		printf("\nIngrese cinco numeros enteros: \n");
		scanf("%d",&array[i]);
		while(array[i] < -100 || array[i] > 100)
		{
			printf("Reingrese cinco numeros enteros: \n");
			scanf("%d",&array[i]);
		}
	}
}

