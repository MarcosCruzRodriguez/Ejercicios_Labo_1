#include "nombre_completo.h"

void formarApellidoNombre(char* pNombre,char* pApellido,char* pCompleto)
{
	strcpy(pCompleto,pApellido);
	strcat(pCompleto,", ");
	strcat(pCompleto,pNombre);

	strlwr(pCompleto);

	pCompleto[0] = toupper(pCompleto[0]);

	printf("%s",pCompleto);
}
