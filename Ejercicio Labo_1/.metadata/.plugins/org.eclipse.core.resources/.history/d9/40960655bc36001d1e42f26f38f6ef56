#include "inicializacion_cero.h"

int inicializacionArray(int array[], int size, int valor)
{
	int retorno = 0;

	if(array != NULL && size > 0)
	{
		for(int i = 0; i < size; i++)
		{
			array[i] = valor;
		}
		retorno = 1;
	}
	return retorno;
}

void pedirValores(int array[], int size)
{
	for(int i = 0; i < size; i++)
	{
		printf("\nIngrese un numero: \n");
		scanf("%d",&array[i]);
		while(array[i] != 0)
		{
			printf("\nReingrese un numero distinto de 0 y entre -50 y 75: \n");
			scanf("%d",&array[i]);
			while(array[i] < -50 || array[i] > 75)
			{
				printf("\nReingrese un numero distinto de 0 y entre -50 y 75: \n");
				scanf("%d",&array[i]);
			}
		}
	}
}
