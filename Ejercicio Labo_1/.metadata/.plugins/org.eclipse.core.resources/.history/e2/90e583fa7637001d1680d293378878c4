#include "empleados.h"

int inicializacionArray(int legajos[], int edad[], int salario[], int size, int valor)
{
	int retorno = 0;

	if(legajos != NULL && size > 0)
	{
		for(int i = 0; i < size; i++)
		{
			legajos[i] = valor;
		}
		retorno = 1;
	}
	return retorno;
}


void ingresoDatos(int legajos[], int edad[], int salario[], int sexo[], int size)
{
	for(int i = 0; i < size; i++)
	{
		printf("Ingrese los ultimos cuatro digitos del legajo: \n");
		scanf("%d",&legajos[i]);
		while(legajos[i] < 1000 || legajos[i] > 9999)
		{
			printf("Reingrese los ultimos cuatro digitos del legajo: \n");
			scanf("%d",&legajos[i]);
		}
		printf("Ingrese la edad del empleado: \n");
		scanf("%d",&legajos[i]);
		while(legajos[i] > 18)
		{
			printf("Reingrese la edad del empleado: \n");
			scanf("%d",&legajos[i]);
		}

	}
}
