#include "validar_caracteres.h"

int validarAlfanumerico(char array[])
{
	int i = 0;
	largo = strlen(alfanumericos);
	alfanumericos[largo-1] = '\0';

	while(array[i] != '\0')
	{
		if((array[i] != '\0') && (array[i] < 'a' || array[i] > 'z') && (array[i] < 'A' || array[i] > 'Z') && (array[i] < '0' || array[i] > '9'))
		{
			return 0;
		}
		else
		{
			i++;
		}
	}
	return 1;
}

