#include "validar_cadenas.h"

int caracteresNumero(char numeroChr[])
{
	int i;
	int large;
	int retorno = 0;

	large = strlen(numeroChr);

	for(i = 0; i < large; i++)
	{
		if(!(isdigit(numeroChr[i])))
		{
			printf("¡ERROR! Ingrese solo numeros\n");
			return retorno;
		}
	}

	retorno = 1;
	return retorno;
}

int caracteresAlfabeticos(char letras[])
{
	int i;
	int large;
	int retorno = 0;

	large = strlen(letras);
	letras[large-1] = '\0';

	for(i = 0; i < large; i++)
	{
		if(!(isalpha(letras[i])))
		{
			printf("¡ERROR! Ingrese solo letras\n");
			return retorno;
		}
	}

	retorno = 1;
	return retorno;
}
